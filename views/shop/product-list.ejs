<%- include('../includes/head.ejs') %>
</head>
<body>
<%- include('../includes/navigation.ejs')
%>
<main>
  <% if(prods.length > 0 ){ %>
  <div class="grid">
    <% prods.forEach((product) => {%>
    <article class="card">
      <header class="card__header">
        <h1 class="product__title"><%= product.title %></h1>
      </header>

      <div class="card__image">
        <img
          src="<%= product.imgUrl %>"
          alt="A Book"
        />
        <div class="card__content">
          <h2 class="product__price"><%= formatCurrency(product.price) %></h2>

        </div>
        <div class="card__actions">
          <a href="/products/<%= product.id %>" class="details-btn">Details</a>
          <%- include('../includes/add-to-cart.ejs', {product: product}) %>
          <form style="padding: 0; margin: 0;" action="/cart/delete" method="post" style="display: flex;">
            <button class="btn" type="submit">-</button>
            <input type="hidden" name="productId" value="<%= product.id %>">
          </form>
        </div>
      </div>
    </article>
    <% }) %>
  </div>
  <% } else { %>
  <h1 style="color: white; margin: 2rem">Not Products Found ðŸ˜ª</h1>
  <% } %>
</main>
<%- include('../includes/end.ejs') %>
