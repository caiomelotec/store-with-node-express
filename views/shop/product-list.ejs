<%- include('../includes/head.ejs') %>
</head>
<body>
<%- include('../includes/navigation.ejs')
%>
<main>
  <% if(prods.length > 0 ){ %>
  <div class="grid">
    <% prods.forEach((prod) => {%>
    <article class="card">
      <header class="card__header">
        <h1 class="product__title"><%= prod.title %></h1>
      </header>

      <div class="card__image">
        <img
          src="<%= prod.imgUrl %>"
          alt="A Book"
        />
        <div class="card__content">
          <h2 class="product__price"><%= prod.price %></h2>
          <p class="product__description">
           <%= prod.description %>
          </p>
        </div>
        <div class="card__actions">
          <a href="/products/<%= prod.id %>" class="details-btn">Details</a>
          <form style="padding: 0; margin: 0;" action="/add-to-cart" method="post"><button class="btn">Add to Cart</button></form>
        </div>
      </div>
    </article>
    <% }) %>
  </div>
  <% } else { %>
  <h1 style="color: white; margin: 2rem">Not Products Found ðŸ˜ª</h1>
  <% } %>
</main>
<%- include('../includes/end.ejs') %>
