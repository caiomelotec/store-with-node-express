<main>
  <% if (!orders || orders.length === 0) { %>
    <h1 style="color: white; margin: 1rem">Nothing thereðŸ˜°</h1>
  <% } else { %>
    <div class="orders-wrapper-container">
      <% orders.forEach(ord => { %>
        <div class="orders-container">
          <h4 style="color: white;">Order ID: <%= ord._id %></h4>
          <a style="color: white; margin: 6px 0;" class="invoice-link" href="/orders/<%= ord._id %>">Download Invoice</a>
