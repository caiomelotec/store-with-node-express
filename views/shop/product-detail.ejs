<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product-detail.css">
</head>
<body>
<%- include('../includes/navigation.ejs')%>
<main>
  <div class="product-detail-wrapper">
    <div class="product-detail-img-div">
      <img src="/<%= product.imgUrl %>" alt="">
    </div>
