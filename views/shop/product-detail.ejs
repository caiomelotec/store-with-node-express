    <h1 class="product-detail-title"><%= product.title %></h1>
    <h4 class="product-detail-description"><%= product.description %></h2>
  </div>
  <div class="product-detail-price-and-btn-div">
  <h2 class="product-detail-price"><%= formatCurrency(product.price) %></h2>
  <%- include('../includes/add-to-cart.ejs', {product: product}) %>
  </div>
</div>
</main>
<%- include('../includes/end.ejs') %>