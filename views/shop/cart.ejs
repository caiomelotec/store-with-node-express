<%- include('../includes/head.ejs') %>
</head>
<body>
  <%- include('../includes/navigation.ejs') %>
  <main>
    <% if(!products || products.length > 0) { %>
      <div class="cart-info-container">
      
          <% products.forEach(prod => { %>
            <div class="product-cart-info-li">
              <h3 class="cart-item-title"><%= prod.productId.title %></h3>
              <h3 class="quantity-cart">quantity: <%= prod.quantity %></h3>
              <form action="/cart-delete-item" method="POST" class="delete-form-item">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <input type="hidden" value="<%= prod.productId._id %>" name="id">
                <button class="delete-item-from-cart-btn" type="submit">Delete</button>
              </form>
            </div>
          <% }) %>        
      </div>

    <form action="/create-order" method="post" class="checkout-cart-form">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <button type="submit" class="btn">CHECKOUT</button>
    </form>
    <% } else { %>
    <h1>No Products In Cart</h1>
    <% } %>
  </main>
  <%- include('../includes/end.ejs') %>
