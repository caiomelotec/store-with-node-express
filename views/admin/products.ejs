<%- include('../includes/head.ejs') %> 
<link rel="stylesheet" href="/css/admin-products.css">
</head>
<body>
<%- include('../includes/navigation.ejs') %>

<main>
  <% if(prods.length > 0 ){ %>
  <div class="grid">
    <% prods.forEach((product) => {%>
    <article class="card">
      <header class="card__header">
        <h1 class="product__title"><%= product.title %></h1>
      </header>

      <div class="card__image">
        <img
          src="<%= product.imgUrl %>"
          alt="A Book"
        />
        <div class="card__content">
          <h2 class="product__price"><%= formatCurrency(product.price) %></h2>
          <p class="product__description">
           <%= product.description %>
          </p>
        </div>
        <div class="card__actions_btns">
          <a class="edit-btn" href="/admin/edit-product/<%= product.id %>?edit=true" >Edit</a>
          <form action="/admin/delete-product" method="post">
            <button class="delete-btn" type="submit">Delete</button>
          </form>
        </div>
      </div>
    </article>
    <% }) %>
  </div>
  <% } else { %>
  <h1 style="color: white; margin: 2rem">Not Products Found ðŸ˜ª</h1>
  <% } %>
</main>
<%- include('../includes/end.ejs') %>
